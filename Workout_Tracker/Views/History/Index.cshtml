

@{
    @model List<Workout_Tracker.Models.Workout>;
}

<div class="History_mainContainer">
    <div class="History_historyContainer">
        <div class="History_title">
            <div>Workout History</div>
            <div>Click to See Each Workout in detail</div>
        </div>


        @if (Model.Count > 0)
        {
        @foreach (var workout in Model)
        {

    <a class="HistoryComponent_completedViewLink" asp-controller="History" asp-action="CompletedWorkout" asp-route-id="@workout.ID">
        <div class="HistoryComponent_mainContainer">

            <div>Date: @workout.Date.Month / @workout.Date.Day/ @workout.Date.Year</div>
            <div> # of Exercises: @workout.Exercises.Count </div>
    

            </div>
        </a>
        }

        } else
        {
            <div>You have no completed workouts</div>
        }
        <Route path="/history/:id" exact component={CompletedWorkoutDisplay} />
    </div>

    <div class="History_paginationContainer">
        <Pagination items={this.state.completedWorkouts} onChangePage={this.onChangePage} pageSize={5} />
    </div>
</div>
